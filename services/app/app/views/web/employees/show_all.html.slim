.container
  .row.d-flex
    .col-lg-12.mx-auto
      h1.text-center.mb-3 = "#{@company.name}'s employees"
  .row.d-flex
    .col-lg-8.mx-auto
      table.table.table-borderless.table-hover
        thead.thead-dark
          tr
            th Personnel number
            th First name
            th Last name
            th Action
            th Department
        tbody
          - @employees.each  do |employee|
            tr
              td= employee.personnel_number
              td= employee.first_name
              td= employee.last_name
              td= link_to 'Show', department_employee_path(employee.department_id, id: employee.id), class: 'btn btn-info'
              td= employee.department.name
      .paging-container
        = paginate @employees
      = link_to 'Back', companies_path(company_id: @company), class: 'btn btn-secondary'
